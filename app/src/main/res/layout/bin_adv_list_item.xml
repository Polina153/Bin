<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_4"
    android:layout_marginBottom="@dimen/margin_4"
    app:cardCornerRadius="@dimen/corner_radius"
    app:cardElevation="@dimen/elevation_0"
    app:cardMaxElevation="@dimen/elevation_0"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/gradient_background"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_12"
            android:layout_marginTop="@dimen/margin_12"
            android:layout_marginEnd="@dimen/margin_12"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/item_image_adv"
                android:layout_width="@dimen/image_view_adv_card_width"
                android:layout_height="@dimen/image_view_adv_card_height"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/avatars"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_8"
                android:orientation="vertical"
                android:paddingEnd="@dimen/margin_8"
                app:layout_constraintStart_toEndOf="@id/item_image"
                app:layout_constraintTop_toTopOf="parent"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toEndOf="@id/item_image"
                    app:layout_constraintTop_toTopOf="parent"
                    >

                    <include layout="@layout/flag_adv_text_view" />

                </LinearLayout>

                <TextView
                    android:id="@+id/item_description_adv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_4"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:textColor="@color/black"
                    tools:text="Гель для облегчения препарирования эдту 17% и пероксид 10% (5мл) арт. 024-02-005, Гель для облегчения препарирования эдту 17% и пероксид 10% (5мл) арт. 024-02-005"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_4"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:id="@+id/new_price_adv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            tools:text="@string/price_example"
                            />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/old_price_layout_adv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            tools:visibility="visible"
                            >

                            <TextView
                                android:id="@+id/old_price_adv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/light_gray"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="@string/price_example"
                                />

                            <View
                                android:layout_width="@dimen/view_card_adv_width"
                                android:layout_height="@dimen/view_card_adv_height"
                                android:background="@color/light_gray"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                />
                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|end"
                        android:orientation="horizontal"
                        >

                        <ImageButton
                            android:id="@+id/minus_button_adv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_background_adv"
                            android:src="@drawable/ic_minus"
                            />

                        <TextView
                            android:id="@+id/item_count_adv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_12"
                            android:layout_marginEnd="@dimen/margin_12"
                            android:text="@string/amount_of_item_example"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            />

                        <ImageButton
                            android:id="@+id/plus_button_adv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_background_adv"
                            android:src="@drawable/ic_plus"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_6"
            android:layout_marginEnd="@dimen/margin_16"
            android:layout_marginBottom="@dimen/margin_12"
            android:background="@drawable/spinner_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/spinner_text_adv"
                android:layout_width="@dimen/text_view_card_adv_width"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:ellipsize="end"
                android:maxLines="2"
                tools:text="Гель для облегчения препарирования эдту 17% и пероксид 10% (5мл) арт. 024-02-005, Гель для облегчения препарирования эдту 17% и пероксид 10% (5мл) арт. 024-02-005"
                />

            <ImageView
                android:layout_width="@dimen/image_view_card_adv_width"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/arrow_drop_down"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>